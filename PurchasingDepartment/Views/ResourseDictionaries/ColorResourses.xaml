<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="WindowBackground" Color="#171A21"/>
    <SolidColorBrush x:Key="WindowBorder" Color="#16191c"/>
    <LinearGradientBrush x:Key="WindowBackground1" EndPoint="0,1" StartPoint="0,0">
        <GradientStop Color="#FF212328"/>
        <GradientStop Color="#FF1A1B1E" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ButtonBackground">
        <GradientStop Color="#FF58BFF7" Offset="0"/>
        <GradientStop Color="#FF4D90F2" Offset="0.5"/>
        <GradientStop Color="#FF4869F2" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ButtonHover">
        <GradientStop Color="#FF45C2FA" Offset="0"/>
        <GradientStop Color="#FF43A6F9" Offset="0.5"/>
        <GradientStop Color="#FF4179F8" Offset="1"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ButtonClick">
        <GradientStop Color="#FF45C1FA" Offset="0"/>
        <GradientStop Color="#FF45C1FA" Offset="0.5"/>
        <GradientStop Color="#FF4185F8" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="TextBoxBackground" Color="#FF2E3035"/>
    <SolidColorBrush x:Key="TextBoxHover" Color="#FF393C43"/>
    <!--Error color-->
    <SolidColorBrush x:Key="ErrorBorder" Color="#FF873543"/>
    <SolidColorBrush x:Key="ErrorForeground" Color="#FFB4333C"/>
</ResourceDictionary>