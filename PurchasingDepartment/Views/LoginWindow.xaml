<Window x:Class="PurchasingDepartment.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:PurchasingDepartment.Converters"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:viewmodel="clr-namespace:PurchasingDepartment.ViewModels"
        xmlns:customcontrols="clr-namespace:PurchasingDepartment.CustomControls"
        mc:Ignorable="d"
        MinHeight="430" 
        Height="430" 
        MinWidth="290"
        Width="290"
        Style="{DynamicResource CustomWindow}">
    <!--Context-->
    <Window.DataContext>
        <viewmodel:LoginViewModel/>
    </Window.DataContext>
    <!--Resourses-->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourseDictionaries/LoginFormResourses.xaml"/>
                <ResourceDictionary Source="Styles/CustomWindow.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <!--Interface-->
    <Grid MaxHeight="430" >

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="5*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <!--Header-->
        <!--ДОбавить перетяжку за хедер путем создания общей команды-->
        <TextBlock Text="Авторизация"
                   Grid.Row="0"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Foreground="White"/>
        <!--Main body -->
        <Grid Grid.Row="1"
              Width="250">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Логин"
                       FontSize="14"
                       Foreground="{StaticResource DefaultText}"
                       VerticalAlignment="Top"
                       Margin="22 0" 
                       Grid.Row="0"/>

            <TextBox Style="{DynamicResource CustomTextBox}"
                     Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}"
                     Height="35"
                     VerticalAlignment="Top"
                     Margin="20 20 20 0"
                     Grid.Row="0"/>

            <TextBlock Text="Пароль"
                       FontSize="14"
                       Foreground="{StaticResource DefaultText}"
                       VerticalAlignment="Top"
                       Margin="22 0" 
                       Grid.Row="1"/>

            <customcontrols:BindablePasswordBox Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                Height="35"                                                       
                                                VerticalAlignment="Top"                           
                                                Margin="20 20 20 0"
                                                Grid.Row="1"/>
            <!--Добавить тригер для кнопку при нажатии Enter-->
            <Button Name="AuthorizationButton"
                    Style="{DynamicResource CustomButton}"
                    Command="{Binding AuthorizeCommand}"
                    Content="Войти"
                    Height="35"
                    Margin="20" 
                    VerticalAlignment="Top"
                    Grid.Row="2"/>

            <TextBlock Name="myTextBlock" 
                       Text="{Binding ErrorMessage}"
                       Style="{DynamicResource ErrorTextBlock}"
                       FontSize="11"
                       Height="38"
                       TextWrapping="Wrap"
                       VerticalAlignment="Bottom"
                       Margin="20"
                       Grid.Row="2"/>
        </Grid>
    </Grid>
</Window>
