<UserControl x:Class="PurchasingDepartment.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PurchasingDepartment.CustomControls"
             xmlns:convertor="clr-namespace:PurchasingDepartment.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <PasswordBox x:Name="pbPassword"
                 Style="{DynamicResource LoginPasswordBox}"
                 Height="35" 
                 PasswordChanged="OnPasswordChanged"/>
</UserControl>
